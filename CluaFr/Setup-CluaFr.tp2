// Infinity UI compatibility

ACTION_IF (GAME_IS ~EET~ AND MOD_IS_INSTALLED ~infinity_ui.tp2~ 0) BEGIN
	
    COPY_EXISTING ~UI.MENU~ ~override~
        REPLACE_TEXTUALLY ~"BD0010"~ ~"CLUASoD"~
        REPLACE_TEXTUALLY ~"BG0002"~ ~"CLUAEET"~
    BUT_ONLY IF_EXISTS
  END
  
