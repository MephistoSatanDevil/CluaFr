BACKUP ~weidu_external/CluaFr/backup~    // location to store files for uninstall purposes
SUPPORT ~(https://www.baldursgateworld.fr)~  // email address displayed if install fails
README ~CluaFr/readme.txt~

ALWAYS

	DEFINE_ACTION_FUNCTION autotra_workaround BEGIN
	COPY ~CluaFr/Languages/french~				~weidu_external/CluaFr/Languages/autotra/%LANGUAGE%~
	COPY ~CluaFr/Languages/%LANGUAGE%~				~weidu_external/CluaFr/Languages/autotra/%LANGUAGE%~
	END

	LAF autotra_workaround END
	
END

VERSION  ~2.0~

ASK_EVERY_COMPONENT

AUTO_TRA ~weidu_external/CluaFr/Languages/autotra/%LANGUAGE%~

LANGUAGE ~Francais~
